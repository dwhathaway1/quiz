<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="United States Geography Quiz!"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which of the following is the Longest River?"
        android:layout_marginBottom="12dp"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <RadioGroup
        android:id="@+id/radioRivers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/radioMissouri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Missouri"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioMississippi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mississippi"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/radioYakima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yakima"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/radioPotomac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Potomac"
            android:textSize="16sp"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which states have populations less than 1 million?"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check all that apply"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <CheckBox
        android:id="@+id/wyoming_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingLeft="24dp"
        android:text="Wyoming"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/alaska_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingLeft="24dp"
        android:text="Alaska"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/vermont_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingLeft="24dp"
        android:text="Vermont"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/delaware_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingLeft="24dp"
        android:text="Delaware"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please type the name of the Southern most state:"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/state_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="State"
        android:inputType="text"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which of the following is the highest peak?"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"/>

    <RadioGroup
        android:id="@+id/radioMountains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/radioDenali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Denali"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radioPike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pike's Peak"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/radioWhitney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mt. Whitney"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/radioElbert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mt. Elbert"
            android:textSize="16sp"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="submitAnswers"
        android:text="Submit Answers" />



</LinearLayout>
    </ScrollView>
